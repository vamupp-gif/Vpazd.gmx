            <string>// Mozgás
hsp = 0;
vsp = 0;
grv = 0.5;
walksp = 2;
jmp = -8;
hp = 3; // 3 találatot bír ki


// Véletlen mozgás irány és időzítők
wander_timer = irandom_range(30, 120);
wander_dir = choose(-1, 1);
jump_timer = irandom_range(45, 120);

// Érzékelés és állapot
target_distance = 200; // meddig "lát" el
was_on_ground = false;
state = "wander"; // lehet: "wander" vagy "chase"

is_knocked = false;
knock_timer = 0;
</string>
