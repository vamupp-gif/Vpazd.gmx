            <string>// Állapotok: "wander", "chase", "attack"
state = "wander";

// Véletlenszerű mozgás paraméterek
wander_dir = choose(-1,1,0); // -1 balra, 1 jobbra, 0 áll
wander_timer = irandom_range(60,180);
jump_timer = irandom_range(60,150);

// Lövés időzítő
shoot_timer = 0;

// Mozgás
walksp = 2;
jmp = -6;

// Gravitáció
grv = 0.5;

vsp = 0;
hsp = 0;

// Emlékeztető a földön állásra
was_on_ground = false;

// HP (ha kell)
