if (move_dir == 0) {
    // vízszintes mozgás
    x += hsp;

    if (place_meeting(x + hsp, y, obj_solid)) {
        hsp *= -1;
        move_dir = 1; // vált függőleges mozgásra
    }
}
else {
    // függőleges mozgás
    y += vsp;

    if (place_meeting(x, y + vsp, obj_solid)) {
        vsp *= -1;
        move_dir = 0; // vissza vízszintesre
    }
}


//------------------------------------------------
// LÖVÉS A LEGKÖZELEBBI JÁTÉKOSRA
//------------------------------------------------
shoot_timer++;
if (shoot_timer &gt;= shoot_rate) {
    shoot_timer = 0;

    var target = noone;

    if (instance_exists(obj_player) &amp;&amp; instance_exists(obj_player2)) {
        var d1 = point_distance(x, y, obj_player.x, obj_player.y);
        var d2 = point_distance(x, y, obj_player2.x, obj_player2.y);

        if (d1 &lt; d2) target = obj_player; else target = obj_player2;
    }
    else {
        if (instance_exists(obj_player)) target = obj_player;
        if (instance_exists(obj_player2)) target = obj_player2;
    }

    if (target != noone) {
        var b = instance_create(x, y, obj_boss_bullet);
        b.direction = point_direction(x, y, target.x, target.y);
        b.speed = 8;
    }
}


//------------------------------------------------
// TOJÁS LEDOBÁSA
//------------------------------------------------
egg_timer++;
if (egg_timer &gt;= egg_rate) {
    // Ellenőrizzük, hány obj_enemy3 van a pályán
    if (instance_number(obj_enemy3) &lt; 5) {
        egg_timer = 0;
        instance_create(x, y, obj_bosstojas);
    }
}


//------------------------------------------------
// SÉRÜLÉS VISSZAÁLLÍTÁSA
//------------------------------------------------
if (hit_timer &gt; 0) {
    hit_timer--;

    if (hit_timer &lt;= 0) {
        sprite_index = spr_idle;
        image_speed = 0.2; // idle animátor sebessége
    }
}


//------------------------------------------------
